<div class="col-md-3">
    <div class="panel panel-info">
        <div class="panel-heading">
            <h3 class="panel-title">{{name}}</h3>
        </div>
        <div class="panel-body">
            {{partial "partials/first_commands"}}
            <ul class="nav nav-tabs">
                <li class="active"><a href="#home" data-toggle="tab"><i class="fa fa-pencil"></i></a></li>
                <li><a href="#position" data-toggle="tab"><i class="fa fa-arrows"></i></a></li>
                <li><a href="#dimension" data-toggle="tab"><i class="fa fa-expand"></i></a></li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane fade in active form-horizontal" id="home">
                    <br>
                    {{input-text label="Name" value=name action='acceptChanges'}}
                    {{input-text label="Title" value=title action='acceptChanges'}}
                    {{input-color-picker label="Text Color" value=textColor action='acceptChanges'}}
                    {{input-color-picker label="Background Color" value=backgroundColor action='acceptChanges'}}
                    {{input-color-picker label="On Click Color" value=clickColor action='acceptChanges'}}
                    {{input-number min="0" max="20" label="Border Radius" value=borderRadius action='acceptChanges'}}
                    {{input-select
                        label="Click listener"
                        content=controllers.viewControllers.model
                        optionLabelPath="content.name"
                        optionValuePath="content"
                        selection=navigationTarget
                        prompt="Navigate to:"}}
                </div>
                <div class="tab-pane fade form-horizontal" id="position">
                    <br>
                    {{partial "partials/ui_control_position"}}
                </div>
                <div class="tab-pane fade form-horizontal" id="dimension">
                    <br>
                    {{input-number label="Width [dp]" min="88" value=width action='acceptChanges' }}
                    {{input-number label="Height [dp]" min="40" value=height action='acceptChanges' }}
                    {{partial "partials/ui_control_dimension"}}
                </div>
            </div>
        </div>
        <div class="panel-footer">
            <div class="btn-group">
                <button type="button" class="btn btn-default" {{action "deleteUiPhoneControl"}}>
                    <i class="fa fa-trash-o"></i>
                </button>
            </div>
        </div>
    </div>
</div>
